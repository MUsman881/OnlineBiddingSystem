
@{
    ViewData["Title"] = "Your Bids";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<style>
    label {
        color: #000;
    }

    .dataTables_info {
        color: #000 !important;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="row pt-4 mb-3">
        <div class="col-12">
            <div class="card">
                <h3 class="card-header text-dark font-monospace">Your Bids</h3>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="bidTable" class="display table table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th>Img</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Owner</th>
                                    <th>Bid Amount</th>
                                    <th>Bid Time</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        var datatable;

        $(document).ready(function () {
            loadDataTable();
        });

        function getDateString(date) {
            var dateObj = new Date(date);
            return dateObj.toLocaleString();
        }

        function loadDataTable() {

            datatable = $("#bidTable").DataTable({
                "ajax": {
                    "url": "/Bid/Getuserbids",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {
                        "data": "auction.coverPhoto", "render": function (data) {
                            return `<img src=${data} height="100px" width="100px" class="img-responsive img-fluid" />`
                        }
                    },
                    { "data": "auction.title" },
                    { "data": "auction.price" },
                    { "data": "auction.user.email" },
                    { "data": "bidAmount" },
                    { 
                        "data": "timestamp", "render": function(data){

                            return getDateString(data);
                        }
                    },
                    {
                        "data": "null", "render": function (data, type, row) 
                        {
                            return`
                                   <div class="d-flex">
                                      <button type="button" class="btn btn-danger btn--sm" onClick="return removeBid('${row.bidId} ',\' ${row.auction.id}')">
                                         <i class="fas fa-trash mr-1"></i>                                      
                                      </button>
                                   </div>
                                  `
                        }
                    }
                ]
            })
        }

        function removeBid(bidId, auctionId) {
            debugger;
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'POST',
                        url: "@Url.Action("Deletebid", "Bid")",
                        data: { id: bidId, aucId: auctionId },
                        success: function (data) {
                            if (data.success) {
                                Swal.fire({
                                    icon: "success",
                                    title: "Success",
                                    text: data.message
                                });
                                datatable.ajax.reload();
                            }
                            else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: data.message
                                });
                            }
                        }
                    })
                }

            })
        }

    </script>
}